	<property name="SizeScale" value="0.50"/>
    <effect_group name="Base Effects">
		<passive_effect name="HealthMax" operation="base_set" value="450"/>
	</effect_group>
</entity_class>
<entity_class name="khelldonScreamerBearHuge" extends="khelldonScreamerBear">
